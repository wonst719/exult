<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal"
        android:divider="?android:dividerHorizontal"
        android:layout_marginTop="2dp"
        android:showDividers="middle"
        xmlns:tools="http://schemas.android.com/tools"
        tools:ignore="DuplicateIds">

        <LinearLayout
            android:id="@+id/contentLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            xmlns:tools="http://schemas.android.com/tools"
            tools:ignore="DuplicateIds"
            android:padding="16dp">

            <CheckBox
                android:id="@+id/keyringCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Marzo's Black Gate Keyring (requires FoV)">
                <tag
                    android:id="@+id/name"
                    android:value="keyring" />
                <tag
                    android:id="@+id/game"
                    android:value="forgeofvirtue" />
                <tag
                    android:id="@+id/downloadUrl"
                    android:value="https://exult.info/snapshots/Keyring.zip" />
            </CheckBox>

            <CheckBox
                android:id="@+id/sifixesCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Marzo's Serpent Isle Fixes (requires SS)">
                <tag
                    android:id="@+id/name"
                    android:value="sifixes" />
                <tag
                    android:id="@+id/game"
                    android:value="silverseed" />
                <tag
                    android:id="@+id/downloadUrl"
                    android:value="https://exult.info/snapshots/Sifixes.zip" />
            </CheckBox>

            <CheckBox
                android:id="@+id/sfislandCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SourceForge Island (requires FoV)">
                <tag
                    android:id="@+id/name"
                    android:value="islefaq" />
                <tag
                    android:id="@+id/game"
                    android:value="forgeofvirtue" />
                <tag
                    android:id="@+id/downloadUrl"
                    android:value="https://exult.info/snapshots/SFisland.zip" />
            </CheckBox>

            <CheckBox
                android:id="@+id/ultimaviCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ultima VI Remake 1.2 (requires FoV)">
                <tag
                    android:id="@+id/name"
                    android:value="ultima6v1.2" />
                <tag
                    android:id="@+id/game"
                    android:value="forgeofvirtue" />
                <tag
                    android:id="@+id/downloadUrl"
                    android:value="https://exult.info/snapshots/Ultima6.zip" />
            </CheckBox>

            <CheckBox
                android:id="@+id/glimmerscapeCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Glimmerscape by Donfrow (requires SS)">
                <tag
                    android:id="@+id/name"
                    android:value="glimmerscape" />
                <tag
                    android:id="@+id/game"
                    android:value="silverseed" />
                <tag
                    android:id="@+id/downloadUrl"
                    android:value="https://exult.info/snapshots/Glimmerscape_SI_mod_by_Donfrow.zip" />
            </CheckBox>
        </LinearLayout>

        <WebView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/contentWebView" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
