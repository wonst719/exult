<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/savegamesTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Savegame Management"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp" />

            <!-- Export Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="16dp">

                <TextView
                    android:id="@+id/exportTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Export Savegames"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/exportDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Export your savegames to the Downloads folder. Each game's savegames will be packaged into a separate ZIP file named after the game. Mod savegames will also be exported with their mod name."
                    android:textColor="#000000"
                    android:layout_marginBottom="16dp" />

                <Button
                    android:id="@+id/exportButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Export Savegames" />

            </LinearLayout>

            <!-- Import Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/importTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Import Savegames"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/importDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Import savegames from a ZIP file. Select a ZIP file containing .sav files and choose which game or mod to import them to. For safety your existing savegames will be backed up before importing."
                    android:textColor="#000000"
                    android:layout_marginBottom="16dp" />

                <Button
                    android:id="@+id/importButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Import Savegames" />

            </LinearLayout>

            <!-- Status Section -->
            <TextView
                android:id="@+id/statusText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text=""
                android:textColor="#666666" />

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
